# Database configuration - use relative path for Render
DATABASE_URL="./data/speed-friending.sqlite"

# Server port - Render assigns this automatically through PORT env var
PORT=10000

# URLs and environment
FRONTEND_URL="https://speed-friending.onrender.com"
NODE_ENV="production"

# Optional: Set this if you want to configure Socket.IO timeout
SOCKET_TIMEOUT=20000

# Optional: Set this for additional security - allow same origin for single-app deployment
CORS_ORIGIN="https://speed-friending.onrender.com"
